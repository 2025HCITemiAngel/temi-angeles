<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF4FF"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/chat_topbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E3F0FF"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="58dp"
            android:layout_height="54dp"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:padding="4dp"
            android:src="@drawable/ic_main_backward"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_temibot"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chat_title"
            android:textColor="#111111"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- STT 모드 토글 버튼 -->
        <LinearLayout
            android:id="@+id/stt_mode_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/btn_stt_realtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실시간 입력"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn_stt_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다 듣고 입력"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="#DDE6F5"
                android:textColor="#4A5A6A"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 초기화 버튼 -->
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5252"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:minHeight="0dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        android:paddingBottom="8dp"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/chat_topbar"
        app:layout_constraintBottom_toTopOf="@id/chat_input_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@android/layout/simple_list_item_1"/>

    <LinearLayout
        android:id="@+id/chat_input_bar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/input_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/chat_input_hint"
            android:background="@null"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#111111"
            android:textColorHint="#9AA7B1"/>

        <!-- 마이크 버튼 (동그라미) -->
        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_circle_mic"
            android:src="@drawable/ic_microphone"
            android:contentDescription="음성 입력"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/chat_send_button"
            android:textAllCaps="false"
            android:backgroundTint="#1A7DFF"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- 듣기 모드 오버레이 (초기 숨김) -->
    <FrameLayout
        android:id="@+id/listening_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/listening_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="듣고 있습니다"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/listening_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화면을 터치하여 메시지 보내기"
                android:textColor="#CCCCCC"
                android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



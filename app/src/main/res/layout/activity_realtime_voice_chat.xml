<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_voice_chat_gradient"
    android:fitsSystemWindows="true">

    <!-- 메인 콘텐츠 (3개 구역) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 1️⃣ 동그라미 컨테이너 (화면의 1/3) -->
        <FrameLayout
            android:id="@+id/circle_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.example.temidummyapp.AnimatedCircleView
                android:id="@+id/animated_circle"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"/>

        </FrameLayout>

        <!-- 2️⃣ 상태 컨테이너 (화면의 1/3) -->
        <FrameLayout
            android:id="@+id/status_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:id="@+id/instruction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="테미 행사에 대해서 물어보세요"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"/>

        </FrameLayout>

        <!-- 3️⃣ 프롬프터 컨테이너 (화면의 1/3) -->
        <FrameLayout
            android:id="@+id/prompter_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/conversation_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:overScrollMode="never"/>

        </FrameLayout>

    </LinearLayout>

    <!-- 플로팅 닫기 버튼 (우측 상단) -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="24dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="닫기"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:elevation="8dp"
        android:alpha="0.9"/>

</FrameLayout>

